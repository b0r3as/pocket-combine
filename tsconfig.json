{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "platforms",
        "plugins",
        "src/cordova-hooks",
        "src/themes",
        "src/typings/main",
        "src/typings/main.d.ts",
        "src/webpack-loaders",
        "www"
